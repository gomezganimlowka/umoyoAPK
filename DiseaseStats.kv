<myTable@MDDAtaTable>:
Screen:
    Image:
        source:'images/Hospital.png'
        pos_hint:{'center_x':0.5, 'center_y':.9}
    Image:
        source:'images/person.png'
        pos_hint: {'center_x': 0.15,'center_y': 0.8}
        width:40
        height:40
        size_hint:None, None
    Image:
        source:'images/menu.png'
        pos_hint: {'center_x': 0.85,'center_y': 0.8}
        width:40
        height:40
        size_hint:None, None
    MDLabel:
        text:'Disease Statistics'
        halign:'center'
        bold:True
        pos_hint: {'center_x': 0.5,'center_y': 0.75}
        size_hint:0.5, None
        width:40
        height:40

    MDCard:
        style:'elevated'
        orientation:'horizontal'
        md_bg_color:(0.90, 0.97, 0.92, 1)
        pos_hint: {'center_x': 0.5,'center_y': 0.65}
        size_hint:0.99, None
        height:60
        MDLabel:
            text:'Disease:'
            halign:'center'
            valign:'center'
            bold:False
            pos_hint: {'center_x': 0.3,'center_y': 0.5}
            size_hint:None, None
            width:100
            height:60

    MDCard:
        style:'elevated'
        orientation:'horizontal'
        md_bg_color:(0.90, 0.97, 0.92, 1)
        pos_hint: {'center_x': 0.5,'center_y': 0.54}
        size_hint:0.99, None
        height:60
        MDLabel:
            text:'Year:'
            halign:'center'
            valign:'center'
            bold:False
            pos_hint: {'center_x': 0.3,'center_y': 0.5}
            size_hint:None, None
            width:100
            height:60


    MDButton:
        style: 'elevated'
        font_size: 12
        size_hint:0.2, 0.1
        pos_hint: {"center_x": 0.8, "center_y":0.05}
        MDButtonText:
            text: "Download"
    MDButton:
        style: 'elevated'
        font_size: 12
        size_hint:0.2, 0.1
        pos_hint: {"center_x": 0.2, "center_y":0.05}
        MDButtonText:
            text: "Back"